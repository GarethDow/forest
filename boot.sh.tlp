#!/bin/bash
yum update -y
yum install -y git
yum -y install docker
service docker start
mkdir /bokeh
cd /bokeh

cat << EOF | perl -pi -e 'chomp if eof' | base64 --decode > package.zip
${package}
EOF

unzip package.zip
docker build  -t bokeh .
docker run  --restart always -p 8888:8888 --cap-add SYS_ADMIN --device /dev/fuse  -v $(pwd)/documents:/opt/documents -e  PUBLIC_IP=$(curl http://169.254.169.254/latest/meta-data/public-ipv4) bokeh
