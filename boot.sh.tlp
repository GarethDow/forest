#!/bin/bash
yum update -y
yum install -y git
yum -y install docker
service docker start
mkdir -p /opt/met
cd /opt/
git clone https://github.com/met-office-lab/model_evaluation_tool.git
cd model_evaluation_tool
docker build  -t met .
docker run  --restart always -p 8888:8888 --cap-add SYS_ADMIN --device /dev/fuse  -v $(pwd)/documents:/opt/documents -e  PUBLIC_IP=$(curl http://169.254.169.254/latest/meta-data/public-ipv4) met
